{
  "manifest_version": 3,
  "name": "Tab Collections",
  "version": "1.0.0",
  "description": "Save and restore browser windows as collections. Group your tabs by work context!",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Collections",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
